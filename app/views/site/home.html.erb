             <md-option value="plate">7</md-option>
        </md-select>
        </md-input-container>
                         
                              </div>
                                                    <div class="col-md-2">
        <md-input-container>
          <label><Strong>Kids</Strong></label>
                        <md-select ng-model="kids" placeholder="Kids" >
                        <md-option value="cloth">0</md-option>
          <md-option value="cloth">1</md-option>
          <md-option value="leather">2</md-option>
          <md-option value="chain">3</md-option>
          <md-option value="plate">4</md-option>
