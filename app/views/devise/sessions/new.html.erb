<h2 ng-controller="dateController">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <md-input-container >
     <label>Email</label>
    
    <%= f.email_field :email, autofocus: true %>
    </md-input-container>
  </div>

  <div class="field">
    <md-input-container >
     <label>Password</label>
    
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "off" %>
    </md-input-container>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
