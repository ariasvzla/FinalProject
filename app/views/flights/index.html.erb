<p id="notice"><%= notice %></p>

<h1>Flights</h1>

<table>
  <thead>
    <tr>
      <th>Fligthcode</th>
      <th>Airline</th>
      <th>Stopsn</th>
      <th>Seatn</th>
      <th>Timestart</th>
      <th>Timeend</th>
      <th>Price</th>
      <th>Planeimg</th>
      <th>Origin</th>
      <th>Dest</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flights.each do |flight| %>
      <tr>
        <td><%= flight.fligthcode %></td>
        <td><%= flight.airline %></td>
        <td><%= flight.stopsn %></td>
        <td><%= flight.seatn %></td>
        <td><%= flight.timestart %></td>
        <td><%= flight.timeend %></td>
        <td><%= flight.price %></td>
        <td><%= flight.planeimg %></td>
        <td><%= flight.origin %></td>
        <td><%= flight.dest %></td>
        <td><%= link_to 'Show', flight %></td>
        <td><%= link_to 'Edit', edit_flight_path(flight) %></td>
        <td><%= link_to 'Destroy', flight, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

